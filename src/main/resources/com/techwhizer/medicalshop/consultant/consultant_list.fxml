<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.techwhizer.medicalshop.controller.consultant.ConsultantList">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Consultant List">
                     <font>
                        <Font name="Arial Black" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER_RIGHT" fillHeight="false" prefHeight="62.0" prefWidth="600.0" spacing="50.0">
               <children>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label text="STATUS : ">
                           <font>
                              <Font name="System Bold" size="12.179104804992676" />
                           </font>
                        </Label>
                        <ComboBox fx:id="comStatus" minHeight="30.0" prefHeight="30.0" prefWidth="180.0" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="354.0" layoutY="26.0" spacing="5.0">
                     <children>
                        <Label text="SEARCH : ">
                           <font>
                              <Font name="System Bold" size="12.179104804992676" />
                           </font>
                        </Label>
                        <TextField fx:id="searchTf" alignment="CENTER" minHeight="30.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter patient name" style="-fx-border-radius: 3; -fx-border-color: grey;" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Pagination fx:id="pagination" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableview" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colSrNum" editable="false" maxWidth="60.0" minWidth="60.0" prefWidth="-1.0" sortable="false" text="SR  #" />
                <TableColumn fx:id="colPatientName" editable="false" maxWidth="230.0" minWidth="190.0" prefWidth="-1.0" sortable="false" text="Patient Name" />
                  <TableColumn fx:id="colConsultDate" editable="false" maxWidth="160.0" minWidth="150.0" prefWidth="-1.0" sortable="false" text="Consult Date" />
                  <TableColumn fx:id="colReferredBy" editable="false" maxWidth="250.0" minWidth="240.0" prefWidth="-1.0" sortable="false" text="Referred By" />
                  <TableColumn fx:id="colConsultDoctorName" editable="false" maxWidth="250.0" minWidth="230.0" prefWidth="-1.0" sortable="false" text="Consult Doctor Name" />
                  <TableColumn fx:id="colStatus" editable="false" maxWidth="120.0" minWidth="120.0" prefWidth="-1.0" sortable="false" text="Status" />
                  <TableColumn fx:id="colAction" editable="false" maxWidth="1.7976931348623157E308" minWidth="120.0" sortable="false" text="Action" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
