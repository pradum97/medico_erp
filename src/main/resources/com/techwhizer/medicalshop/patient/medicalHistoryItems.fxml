<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.medicalshop.controller.patient.MedicalHistoryItems">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableview" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colSr" maxWidth="70.0" minWidth="70.0" prefWidth="75.0" text="SR #" />
                <TableColumn fx:id="colItemName" maxWidth="300.0" minWidth="200.0" prefWidth="75.0" text="Items Name" />
                  <TableColumn fx:id="colDose" maxWidth="100.0" minWidth="100.0" prefWidth="75.0" text="Dose" />
                  <TableColumn fx:id="colQty" maxWidth="100.0" minWidth="100.0" prefWidth="75.0" text="Quantity" />
                  <TableColumn fx:id="colDuration" maxWidth="130.0" minWidth="130.0" prefWidth="75.0" text="Duration" />
                  <TableColumn fx:id="colTime" maxWidth="230.0" minWidth="200.0" prefWidth="75.0" text="Time" />
                  <TableColumn fx:id="colFrequency" maxWidth="230.0" minWidth="200.0" prefWidth="75.0" text="Frequency" />
                  <TableColumn fx:id="colRemark" maxWidth="300.0" minWidth="200.0" prefWidth="75.0" text="Remark" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="40.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#closeButton" prefHeight="11.0" prefWidth="120.0" style="-fx-cursor: hand; -fx-background-color: RED; -fx-text-fill: WHITE; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 20;" text="CLOSE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
