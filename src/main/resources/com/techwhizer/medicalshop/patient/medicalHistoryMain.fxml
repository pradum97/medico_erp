<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.medicalshop.controller.patient.MedicalHistoryMain">
   <left>
      <TableView fx:id="tableview" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colSr" maxWidth="70.0" minWidth="70.0" prefWidth="75.0" text="SR #" />
          <TableColumn fx:id="colConsultDate" maxWidth="200.0" minWidth="200.0" prefWidth="75.0" text="Consult Date" />
            <TableColumn fx:id="colTotalItems" maxWidth="100.0" minWidth="100.0" prefWidth="75.0" text="Total Items" />
            <TableColumn fx:id="colAction" maxWidth="300.0" minWidth="300.0" prefWidth="75.0" text="Action" />
        </columns>
      </TableView>
   </left>
   <bottom>
      <HBox alignment="CENTER" prefHeight="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#closeButton" prefHeight="11.0" prefWidth="120.0" style="-fx-cursor: hand; -fx-background-color: RED; -fx-text-fill: WHITE; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 20;" text="CLOSE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
