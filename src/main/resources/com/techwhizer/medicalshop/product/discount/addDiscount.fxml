                              <Label lineSpacing="5.0" prefHeight="18.0" prefWidth="257.0" text=" DISCOUNT* %:">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="discountTF" focusTraversable="false" minHeight="37.0" onKeyReleased="#pressEnter" prefHeight="35.0" prefWidth="312.0" promptText="ENTER DISCOUNT ( % )" style="-fx-border-color: gray; -fx-border-radius: 3;">
