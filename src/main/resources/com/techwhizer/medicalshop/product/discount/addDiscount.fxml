                        <TextArea fx:id="descriptionTF" focusTraversable="false" minHeight="50.0" onKeyReleased="#pressEnter" prefHeight="60.0" prefWidth="312.0" promptText="ENTER DESCRIPTION :" style="-fx-border-color: gray; -fx-border-radius: 3;" />
