                        <VBox spacing="8.0">
                           <children>
                              <Label text="HSN / SAC* :">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="hsn_sacTf" minHeight="40.0" minWidth="290.0" onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="290.0" promptText="Enter HSN / SAC" style="-fx-border-color: gray; -fx-border-radius: 3;" />
