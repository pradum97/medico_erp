                             <VBox fillWidth="false">
                                 <children>
                                     <Label text="DESCRIPTION ( optional ) :  ">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                     </Label>
                                     <TextField fx:id="descriptionTF" minHeight="50.0" minWidth="140.0" onKeyReleased="#enterPress" prefHeight="50.0" prefWidth="290.0" promptText="Enter Description" style="-fx-border-color: gray; -fx-border-radius: 3;" />
