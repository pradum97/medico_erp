                             <VBox fillWidth="false">
                                 <children>
                                     <Label text="IGST* : ">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                     </Label>
                                     <TextField fx:id="igstTF" minHeight="36.0" minWidth="140.0" onKeyReleased="#enterPress" prefHeight="36.0" prefWidth="140.0" promptText="Enter IGST" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                                 </children>
                             </VBox>
                             <VBox fillWidth="false" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                     <Label text="GST NAME* :">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                     </Label>
                                     <TextField fx:id="gstNameTF" minHeight="36.0" minWidth="140.0" onKeyReleased="#enterPress" prefHeight="36.0" prefWidth="140.0" promptText="Enter GST NAME" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                                 </children>
                             </VBox>
