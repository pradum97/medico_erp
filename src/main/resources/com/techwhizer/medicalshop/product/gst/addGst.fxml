<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.medicalshop.controller.product.gst.AddGst">
   <center>
      <VBox alignment="CENTER" fillWidth="false">
