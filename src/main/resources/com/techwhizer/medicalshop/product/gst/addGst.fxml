                        </VBox>
                     </children>
                  </HBox>
                     <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
                         <children>
                             <VBox fillWidth="false">
                                 <children>
                                     <Label text="SGST* : ">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                     </Label>
                                     <TextField fx:id="sgstTF" minHeight="36.0" minWidth="140.0" onKeyReleased="#enterPress" prefHeight="36.0" prefWidth="140.0" promptText="Enter SGST" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                                 </children>
                             </VBox>
                             <VBox fillWidth="false" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
